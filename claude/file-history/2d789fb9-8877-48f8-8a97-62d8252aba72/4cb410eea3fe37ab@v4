#![allow(dead_code)]
// Definition for singly-linked list.
#[derive(PartialEq, Eq, Clone, Debug)]
pub struct ListNode {
    pub val: i32,
    pub next: Option<Box<ListNode>>,
}

impl ListNode {
    #[inline]
    fn new(val: i32) -> Self {
        ListNode { next: None, val }
    }
}

struct Solution;

impl Solution {
    pub fn remove_nth_from_end(head: Option<Box<ListNode>>, n: i32) -> Option<Box<ListNode>> {
        // Create a dummy node to handle edge cases (like removing the head)
        let mut dummy = Box::new(ListNode { val: 0, next: head });

        // Calculate length by traversing with immutable reference
        let mut length = 0;
        let mut curr = &dummy.next;
        while let Some(node) = curr {
            length += 1;
            curr = &node.next;
        }

        // Calculate position from start: to remove nth from end,
        // we need to stop at position (length - n) from the beginning
        let steps_to_target = length - n;

        // TODO(human): Traverse to the node just before the target and skip the next node
        // Hint: Start with `let mut curr = &mut dummy;` and traverse `steps_to_target` times
        // Then use: curr.next = curr.next.as_mut()?.next.take();
        let mut curr = &mut dummy;
        for _ in 0..steps_to_target {
            curr = curr.next.as_mut().unwrap();
        }
        curr.next = curr.next.as_mut()?.next.take();

        dummy.next
    }
}

#[cfg(test)]
pub mod tests {
    use super::*;

    #[test]
    fn test_list_one() {
        // Create linked list: 1 -> 2 -> 3 -> 4 -> 5
        let head = Some(Box::new(ListNode {
            val: 1,
            next: Some(Box::new(ListNode {
                val: 2,
                next: Some(Box::new(ListNode {
                    val: 3,
                    next: Some(Box::new(ListNode {
                        val: 4,
                        next: Some(Box::new(ListNode { val: 5, next: None })),
                    })),
                })),
            })),
        }));

        // Expected: 1 -> 2 -> 3 -> 5
        let expected = Some(Box::new(ListNode {
            val: 1,
            next: Some(Box::new(ListNode {
                val: 2,
                next: Some(Box::new(ListNode {
                    val: 3,
                    next: Some(Box::new(ListNode { val: 5, next: None })),
                })),
            })),
        }));

        let answer = Solution::remove_nth_from_end(head, 2);
        assert_eq!(expected, answer);
    }
}
