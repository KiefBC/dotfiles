#![allow(dead_code)]
struct Solution;

impl Solution {
    pub fn four_sum(nums: Vec<i32>, target: i32) -> Vec<Vec<i32>> {
        let mut result: Vec<Vec<i32>> = Vec::new();
        let len = nums.len();
        let mut nums = nums;
        nums.sort_unstable();

        for i in 0..len {
            if i > 0 && nums[i] == nums[i - 1] {
                continue;
            }

            for j in (i + 1)..(len - 1) {
                if j > (i + 1) && nums[j] == nums[j - 1] {
                    continue;
                }

                let mut left = j + 1;
                let mut right = len - 1;

                while left < right {
                    let sum =
                        nums[i] as i64 + nums[j] as i64 + nums[left] as i64 + nums[right] as i64;

                    if sum == target as i64 {
                        result.push(vec![nums[i], nums[j], nums[left], nums[right]]);

                        left += 1;
                        right -= 1;

                        while left < right && nums[left] == nums[left - 1] {
                            left += 1;
                        }

                        while left < right && nums[right] == nums[right + 1] {
                            right -= 1;
                        }
                    } else if sum < target as i64 {
                        left += 1;
                    } else {
                        right -= 1;
                    }
                }
            }
        }

        result
    }
}

#[cfg(test)]
pub mod tests {
    use super::*;

    #[test]
    fn test_one() {
        let input = vec![1, 0, -1, 0, -2, 2];
        let expected = vec![vec![-2, -1, 1, 2], vec![-2, 0, 0, 2], vec![-1, 0, 0, 1]];
        let answer = Solution::four_sum(input, 0);
        assert_eq!(expected, answer);
    }

    #[test]
    fn test_four_zeroes() {
        let input: Vec<i32> = vec![0, 0, 0, 0];
        let expected = vec![vec![0, 0, 0, 0]];
        let answer = Solution::four_sum(input, 0);
        assert_eq!(expected, answer);
    }

    #[test]
    fn test_overflow() {
        let input: Vec<i32> = vec![1000000000, 1000000000, 1000000000, 1000000000];
        let target = -294967296;
        let expected: Vec<Vec<i32>> = vec![];
        let answer = Solution::four_sum(input, target);
        assert_eq!(expected, answer);
    }
}
