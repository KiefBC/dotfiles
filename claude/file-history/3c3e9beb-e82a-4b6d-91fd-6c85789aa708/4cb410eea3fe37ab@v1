#![allow(dead_code)]
// Definition for singly-linked list.
#[derive(PartialEq, Eq, Clone, Debug)]
pub struct ListNode {
    pub val: i32,
    pub next: Option<Box<ListNode>>,
}

impl ListNode {
    #[inline]
    fn new(val: i32) -> Self {
        ListNode { next: None, val }
    }
}

struct Solution;

impl Solution {
    pub fn remove_nth_from_end(head: Option<Box<ListNode>>, n: i32) -> Option<Box<ListNode>> {
        let mut curr = head.unwrap();
        let mut count = 0;

        while curr.as_ref().next.is_some() {
            // stop one node before
            if count == n - 1 {
                let node = &curr.as_ref().next;
                let after_node = node.clone().unwrap().next;

                curr.next = after_node;
                return Some(curr);
            }

            curr = curr.next?;
            count += 1;
        }

        None
    }
}

#[cfg(test)]
pub mod tests {
    super::*;

    #[test]
    fn test_list_one() {
        // test
    }
}
